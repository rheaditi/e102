<div class="container-fluid">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			
			<div class="form-create col-xs-6">
				<form class="panel panel-default">
					<div class="panel-heading">
						Create A Post
					</div>
					<div class="panel-body form-horizontal">

						<div class="form-group">
							<label for="creator" class="col-xs-2 control-label">Username:</label>
							<div class="col-xs-10">
								{{input name='creator' value=creator required=true}}
							</div>
						</div>

						<div class="form-group">
							<label for="question" class="col-xs-2 control-label">Question:</label>
							<div class="col-xs-10">
								{{input name='question' value=question required=true}}
							</div>
						</div>

						<div class="form-group">
							<label for="description" class="col-xs-2 control-label">Description:</label>
							<div class="col-xs-10">
								{{input name='description' value=description required=true}}
							</div>
						</div>

						<div class="form-group">
							<label for="url" class="col-xs-2 control-label">Embed URL:</label>
							<div class="col-xs-10">
								 {{input name='url' value=url required=true action='embedFetch' on='key-up'}}
							</div> 
						</div>

					</div>
					<div class="panel-footer">
		        	<button type='reset' class='btn btn-danger'>Clear</button>
		        	<button class="btn btn-success" {{action "saveToServer" on="click"}}>
		        	{{#if isSaving}}
		        		Saving...
		        	{{else if isSaved}}
		        		Saved!
		        	{{else}}
		        		Create Post
		        	{{/if}}
		        	</button>
					</div>
				</form>
			</div>
			
			<div class="form-view col-xs-6">
				<div class="panel panel-primary">

					<div class="panel-heading">
						<a href="">{{creator}}</a> asked <a href="">{{question}}</a>
					</div>
					<div class="panel-body row">
						<p class="description col-xs-12">
							{{description}}
						</p>
						{{#if isLoading}}
						<div class="col-xs-12 embed-loading">
							<i class="fa fa-refresh fa-spin"></i>
						</div>
						{{/if}}
						{{#if isLoaded}}
							<div class="embedded_content thumbnail col-xs-10 col-xs-offset-1">
								{{#if hasThumbnail}}
									<img src="{{embedded_content.thumbnail_url}}" alt="{{embedded_content.title}}"/>
								{{/if}}
								
								<div class="caption">
								<h3>{{embedded_content.title}} {{embedded_content.provider_url}}</h3>
									<p>{{embedded_content.description}}</p>
									<div class="center-block">
										{{{embedded_content.html}}}
									</div>
								</div>
							</div>
						{{/if}}
					</div>
				</div>
			</div>

		</div>
	</div>
</div>


