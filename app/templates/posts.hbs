<div class="container">
	<div class="row">
		
		{{#each model as |post|}}
			<article class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
				<div class="panel panel-default">
					<div class="panel-heading clearfix	">
						<span class="pull-left">{{#link-to "posts.post"}} Title {{/link-to}} by {{post.creator}}</span>
						<span class="pull-right muted">{{post.created_at}}</span>
					</div>
					<div class="panel-body">
						{{post.description}}
					</div>
				</div>
			</article>
		{{/each}}	
		<article class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
			{{infinity-loader infinityModel=model}}
		</article>
	</div>
</div>
