<div class="container">
	<div class="row">

		{{#each model as |m-post|}}
			<div class="form-view col-xs-6 col-xs-offset-3">
				<div class="panel panel-primary">
					<div class="panel-heading clearfix">
						<span class="pull-right muted smaller">
							{{m-post.created_at}}
						</span>
						<span class="pull-left">
							<a href="">{{m-post.creator}}</a> asked <a href="">{{if m-post.question m-post.question "<untitled question>"}}</a>
						</span>
					</div>

					<div class="panel-body">
						<p class="description col-xs-12">{{m-post.description}}</p>
						<div class="embedded_content thumbnail col-xs-10 col-xs-offset-1">
							<img src="{{m-post.embedded_content.thumbnail_url}}" alt="{{m-post.embedded_content.title}}" class="col-xs-4"/>
							<caption class="caption col-xs-8">
								<a href="{{m-post.embedded_content.url}}"><h5>{{m-post.embedded_content.title}}</h5></a>
								<p>{{m-post.embedded_content.description}}</p>
							</caption>
							<div class="col-xs-12">
								{{{m-post.embedded_content.html}}}
							</div>
						</div>
					</div>
				</div>
			</div>
		{{/each}}

		<div class="col-xs-6 col-xs-offset-3 embed-loading">
			{{#infinity-loader infinityModel=model destroyOnInfinity=true}}
				<i class="fa fa-spin fa-refresh" style="font-size: 3rem"></i>
			{{/infinity-loader}}
		</div>
		
	</div>
</div>